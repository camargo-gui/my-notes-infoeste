generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(cuid())
  email    String   @unique
  password String
  name     String
  notes    Note[]
}

model Note {
  id        String   @id @default(cuid())
  title     String
  content   String
  priority  Priority
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}